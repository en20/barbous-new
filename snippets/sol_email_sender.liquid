

<script>
    var solomonCustomer;
    {% if customer %}
        console.log('has_customer_info');
        solomonCustomer = {
            'email': '{{ customer.email }}',
            'firstName': '{{ customer.first_name }}',
            'customer_id': '{{ customer.id }}',
